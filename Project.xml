<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Engkanto" package="com.yourname.engkanto" version="1.0.0" company="Your Company" />
    
    <app main="Main" path="docs" file="engkanto" /> <!-- Changed path to "docs" -->
    
    <!-- Window settings -->
    <window width="640" height="480" fps="60" background="#000000" />
    
    <!-- Set HTML5 as default target -->
    <set name="HXCPP_DEBUG" value="false" />
    <set name="FLX_NO_DEBUG" />
    
    <!-- Source path -->
    <source path="Source" />
    
    <!-- Assets -->
    <assets path="assets" rename="assets" />
    
    <!-- HTML5 specific settings -->
    <haxedef name="web" />
    <haxedef name="openfl_next" />
    <haxedef name="html5" />
    
    <!-- Set initial state for HTML5 -->
    <haxeflag name="--connect" value="6000" />
    
    <!-- Libraries -->
    <haxelib name="openfl" />
    <haxelib name="flixel" />
    
    <!-- For mobile testing -->
    <window if="mobile" orientation="landscape" />
    <window if="mobile" resizable="false" />
</project>